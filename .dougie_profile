###################################################
#                     MY STUFF                    #
###################################################

for file in ~/.{path,aliases,functions,extra}; do
	[ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;

# Setup directory colors
eval `dircolors -b dircolors-solarized/dircolors.ansi-dark`

# Start ssh agent
if [[ -f .ssh-agent ]]; then
	source .ssh-agent
fi

export PATH=~/.local/bin:$PATH
